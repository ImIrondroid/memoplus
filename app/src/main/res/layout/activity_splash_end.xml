<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/_constraint"
    android:gravity="center">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_top_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/_title_start1"
        style="@style/NotoBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/_top_guide"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="1"
        android:layout_marginStart="105dp"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:text="메"
        />

    <TextView
        android:id="@+id/_title_start2"
        style="@style/NotoBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/_top_guide"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="145dp"
        android:alpha="1"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:text="모"
        />

    <TextView
        android:id="@+id/_title_start3"
        style="@style/NotoBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/_top_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="1"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:text="플"
        />

    <TextView
        android:id="@+id/_title_start4"
        style="@style/NotoBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/_top_guide"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="145dp"
        android:alpha="1"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:text="러"
        />

    <TextView
        android:id="@+id/_title_start5"
        style="@style/NotoBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/_top_guide"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="105dp"
        android:alpha="1"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:text="스"
        />

    <ImageView
        android:id="@+id/_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/_title_start5"
        app:layout_constraintBottom_toTopOf="@id/_title_start5"
        android:src="@drawable/pencil_vector"
        />

    <TextView
        android:id="@+id/_title_end"
        style="@style/NotoBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:alpha="1"
        android:layout_marginBottom="30dp"
        android:text="@string/madeby"
        />

    <!--<ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/splash"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>